<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControlCliente</servlet-name>
        <servlet-class>controlador.ControlCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlLogin</servlet-name>
        <servlet-class>controlador.ControlLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlEmpleados</servlet-name>
        <servlet-class>controlador.ControlEmpleados</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlProducto</servlet-name>
        <servlet-class>controlador.ControlProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlVenta</servlet-name>
        <servlet-class>controlador.ControlVenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlCarrito</servlet-name>
        <servlet-class>controlador.ControlCarrito</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlCliente</servlet-name>
        <url-pattern>/ControlCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlLogin</servlet-name>
        <url-pattern>/ControlLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlEmpleados</servlet-name>
        <url-pattern>/ControlEmpleados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlProducto</servlet-name>
        <url-pattern>/ControlProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlVenta</servlet-name>
        <url-pattern>/ControlVenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlCarrito</servlet-name>
        <url-pattern>/ControlCarrito</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>

